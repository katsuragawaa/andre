---
import { t, changeLanguage } from "i18next";
import ArrowLink from "../../components/ArrowLink.astro";
import Layout from "../../layouts/Layout.astro";

changeLanguage("en");
---

<Layout
    title="Experience â€¢ Mercado Livre"
    description="Details about the Andre Katsuragawa's performance at Mercado Livre, where he uses technologies such as React, Typescript, Java, Go (Golang) and Python.">
    <section id="links">
        <h2 class="relative mb-8 text-lg">
            <a href={t('meli.link')} target="_blank" class="flex items-center gap-2 hover:underline"
                >{t('meli.title')}
                <ArrowLink />
            </a>
            <a id="back" href={t('nav.link')} class="material-icons-outlined absolute -left-12">west</a>
        </h2>
        <div class="flex flex-col gap-4">
            <p class="opacity-50">{t('meli.description.a')}</p>
            <p class="opacity-75">{t('meli.description.b')}</p>
            <p class="opacity-75">{t('meli.description.c')}</p>
            <p class="opacity-75">{t('meli.description.d')}</p>
            <p class="opacity-75">{t('meli.description.e')}</p>
            <p class="opacity-75">{t('meli.description.f')}</p>

            <p class="mt-6 opacity-50">{t('meli.bullet.title')}</p>
            <ul class="ml-3 flex list-disc flex-col gap-2 opacity-75">
                <li>{t('meli.bullet.item.a')}</li>
                <li>{t('meli.bullet.item.b')}</li>
                <li>{t('meli.bullet.item.c')}</li>
                <li>{t('meli.bullet.item.d')}</li>
                <li>{t('meli.bullet.item.e')}</li>
                <li>{t('meli.bullet.item.f')}</li>
                <li>{t('meli.bullet.item.g')}</li>
            </ul>
        </div>
    </section>
</Layout>
<style>
    #back {
        font-size: 20px;
        top: 4px;
    }
</style>
